<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restaurant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/tajawal_regular</item>
    </style>

    <!--splash screen-->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="MaterialEditTextStyle">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_20</item>
    </style>

    <style name="MaterialTextStyle">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialTextViewSmallStyle">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialTextViewBodyStyle">
        <item name="android:textSize">@dimen/size_body</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/vertical_10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/vertical_10dp</item>
        <item name="cardElevation">@dimen/spacing_large</item>
        <item name="cardMaxElevation">@dimen/spacing_large</item>
    </style>

    <style name="TextInputLayoutSearchStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_icon_padding</item>
        <item name="boxStrokeColor">@color/grey_10</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:textColorHint">@color/grey_20</item>
        <item name="startIconDrawable">@drawable/search</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_icon_padding</item>
        <item name="boxStrokeColor">@color/grey_10</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="TextInputEditTextSearchStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>