<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restaurant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--splash screen-->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="MaterialEditTextStyle">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_20</item>
    </style>

    <style name="MaterialTextTitleStyle">
        <item name="android:textSize">@dimen/size_title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialTextStyle">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialTextViewSmallStyle">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialTextViewBodyStyle">
        <item name="android:textSize">@dimen/size_body</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChipStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/vertical_10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MaterialOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/vertical_10dp</item>
        <item name="strokeWidth">0.75dp</item>
        <item name="strokeColor">@color/green_200</item>
    </style>

    <style name="MaterialToggleButtonViewStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/vertical_10dp</item>
        <item name="cardElevation">@dimen/spacing_large</item>
        <item name="cardMaxElevation">@dimen/spacing_large</item>
    </style>

    <style name="TextInputLayoutSearchStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_default</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_default</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_default</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_default</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_icon_padding</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_icon_padding</item>
        <item name="boxStrokeColor">@color/grey_10</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="TextInputEditTextSearchStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>