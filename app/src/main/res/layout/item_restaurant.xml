<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="magma.global.restaurant.model.Restaurant" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_icon_padding"
        android:background="@color/white"
        android:elevation="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/spacing_icon_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <magma.global.restaurant.utils.DynamicHeightNetworkImageView
                android:id="@+id/img_restaurant"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/storeimgae"
                android:scaleType="centerCrop"
                app:layout_constraintHeight_percent="0.75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_distance"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textColor="@color/grey_60"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:text="@{item.deletedDate.toString() + `km`}"
                tools:text="1.2km"
                android:background="@drawable/bg_rounded"
                app:layout_constraintBottom_toBottomOf="@id/img_restaurant"
                app:layout_constraintEnd_toEndOf="@+id/img_restaurant" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{item.title}"
                android:textStyle="bold"
                tools:text="@string/app_name"
                app:layout_constraintBottom_toTopOf="@+id/txt_location"
                app:layout_constraintEnd_toStartOf="@+id/txt_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_restaurant" />

            <TextView
                android:id="@+id/txt_location"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/grey_60"
                android:text="@{item.description}"
                tools:text="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title" />

            <TextView
                android:id="@+id/txt_review"
                style="@style/MaterialTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_icon_padding"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/green_200"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{item.deletedDate.toString()}"
                tools:text="4.3"
                android:drawablePadding="@dimen/spacing_icon_padding"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_location"
                app:layout_constraintStart_toEndOf="@+id/txt_title"
                app:layout_constraintTop_toBottomOf="@+id/img_restaurant"
                app:drawableStartCompat="@drawable/star" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_card_padding"
                android:contentDescription="@string/app_name"
                android:src="@drawable/location2"
                app:layout_constraintTop_toBottomOf="@id/img_restaurant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>