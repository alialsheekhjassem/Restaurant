<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="magma.global.restaurant.model.Restaurant" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_icon_padding"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:background="@color/white"
        android:elevation="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/spacing_icon_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <magma.global.restaurant.utils.DynamicHeightNetworkImageView
                android:id="@+id/img_restaurant"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_height"
                android:layout_margin="@dimen/spacing_large"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_rounded_image"
                android:scaleType="centerCrop"
                android:src="@drawable/image2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.title}"
                app:layout_constraintBottom_toTopOf="@+id/txt_description"
                app:layout_constraintStart_toEndOf="@id/img_restaurant"
                app:layout_constraintTop_toTopOf="@id/img_restaurant"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/txt_description"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:text="@{item.description}"
                android:textColor="@color/grey_60"
                app:layout_constraintEnd_toStartOf="@+id/card_quantity"
                app:layout_constraintStart_toStartOf="@id/txt_title"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.deletedDate.toString() + `$`}"
                android:textSize="@dimen/size_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_restaurant"
                tools:text="15$" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                style="@style/MaterialOutlinedButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:text="@string/add"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:icon="@drawable/plus"
                app:iconGravity="end"
                app:iconTint="@color/green_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_description"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_icon_padding"
                android:elevation="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/spacing_icon_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_description"
                app:layout_constraintTop_toBottomOf="@+id/txt_description"
                tools:visibility="gone">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green_200"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_inc"
                        android:layout_width="@dimen/default_icon_size"
                        android:layout_height="@dimen/default_icon_size"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/plus"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/txt_quantity"
                        style="@style/MaterialTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_large"
                        android:text="@{item.deletedDate.toString()}"
                        android:textColor="@color/white"
                        tools:text="1" />

                    <ImageButton
                        android:id="@+id/btn_dec"
                        android:layout_width="@dimen/default_icon_size"
                        android:layout_height="@dimen/default_icon_size"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/min" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>